{
  "server": {
    "port": 3456,
    "host": "localhost",
    "architecture": "v3.0-six-layer",
    "environment": "development"
  },
  "providers": {
    "lmstudio-dev": {
      "type": "openai",
      "endpoint": "http://localhost:1234/v1/chat/completions",
      "authentication": {
        "type": "none"
      },
      "models": ["local-model"],
      "timeout": 30000,
      "maxRetries": 3,
      "retryDelay": 1000
    },
    "shuaihong-dev": {
      "type": "openai",
      "endpoint": "https://ai.shuaihong.fun/v1/chat/completions",
      "authentication": {
        "type": "bearer",
        "credentials": {
          "apiKey": ["${SHUAIHONG_API_KEY}"]
        }
      },
      "models": ["claude-4-sonnet", "gemini-2.5-pro"],
      "timeout": 60000,
      "maxRetries": 2,
      "retryDelay": 2000
    }
  },
  "routing": {
    "strategy": "category-driven",
    "categories": {
      "default": {
        "provider": "lmstudio-dev",
        "model": "local-model"
      },
      "background": {
        "provider": "lmstudio-dev",
        "model": "local-model"
      },
      "thinking": {
        "provider": "shuaihong-dev",
        "model": "claude-4-sonnet"
      },
      "longcontext": {
        "provider": "shuaihong-dev",
        "model": "gemini-2.5-pro"
      },
      "search": {
        "provider": "lmstudio-dev",
        "model": "local-model"
      }
    }
  },
  "debug": {
    "enabled": true,
    "logLevel": "debug",
    "logDir": "/tmp/ccr-dev-logs",
    "traceRequests": true,
    "saveRequests": true
  },
  "errors": {
    "messages": {
      "configuration_missing": "Required configuration '{key}' is missing",
      "provider_unavailable": "Provider '{provider}' is not available",
      "model_not_found": "Model '{model}' not found in provider '{provider}'",
      "authentication_failed": "Authentication failed for provider '{provider}'",
      "request_timeout": "Request to provider '{provider}' timed out after {timeout}ms",
      "validation_error": "Configuration validation failed: {details}",
      "preprocessing_failed": "Response preprocessing failed for {provider}/{model} [{requestId}]: {error}"
    },
    "httpCodes": {
      "configuration_missing": 500,
      "provider_unavailable": 502,
      "model_not_found": 404,
      "authentication_failed": 401,
      "request_timeout": 504,
      "validation_error": 400,
      "preprocessing_failed": 500
    },
    "templates": {
      "configuration_missing": "CONFIGURATION ERROR: Required configuration '{key}' is missing. Please check your configuration files.",
      "provider_unavailable": "PROVIDER ERROR: Provider '{provider}' is not available. Please check provider configuration and connectivity.",
      "model_not_found": "MODEL ERROR: Model '{model}' not found in provider '{provider}'. Available models: {availableModels}",
      "authentication_failed": "AUTHENTICATION ERROR: Authentication failed for provider '{provider}'. Please check your credentials.",
      "request_timeout": "TIMEOUT ERROR: Request to provider '{provider}' timed out after {timeout}ms. Please check provider connectivity.",
      "validation_error": "VALIDATION ERROR: Configuration validation failed: {details}",
      "preprocessing_failed": "PREPROCESSING ERROR: Response preprocessing failed for {provider}/{model} [{requestId}]: {error}. Please check patch system configuration."
    }
  },
  "validation": {
    "required": [
      "server.port",
      "server.host",
      "server.architecture",
      "server.environment",
      "providers",
      "routing.strategy",
      "routing.categories",
      "debug.enabled",
      "debug.logLevel",
      "debug.logDir",
      "errors.messages",
      "errors.httpCodes",
      "errors.templates"
    ],
    "environmentFiles": {
      "providers.shuaihong-dev.authentication.credentials.apiKey": "SHUAIHONG_API_KEY_JSON"
    }
  }
}