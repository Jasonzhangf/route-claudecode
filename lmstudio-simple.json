{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "4.0.0",
  "description": "Simple LM Studio RCC v4.0 configuration for E2E testing",
  
  "server": {
    "port": 5506,
    "host": "localhost"
  },
  
  "providers": {
    "lmstudio": {
      "id": "lmstudio-main",
      "name": "LM Studio Provider",
      "enabled": true,
      "type": "server-compatibility",
      "protocol": "openai-compatible",
      "connection": {
        "baseUrl": "http://localhost:1234/v1",
        "timeout": 30000,
        "maxRetries": 3
      },
      "models": {
        "supportedModels": ["gpt-oss-20b-mlx", "glm-4.5v"],
        "defaultModel": "gpt-oss-20b-mlx"
      },
      "features": {
        "chat": true,
        "tools": true,
        "streaming": false
      }
    }
  },
  
  "routing": {
    "strategy": "single-provider",
    "defaultProvider": "lmstudio"
  },
  
  "debug": {
    "enabled": true,
    "logLevel": "info"
  },
  
  "zeroFallbackPolicy": {
    "enabled": true,
    "strictMode": true,
    "errorOnFailure": true
  }
}