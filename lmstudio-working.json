{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "4.0.0",
  "description": "Working LM Studio RCC v4.0 configuration for E2E testing",
  
  "server": {
    "port": 5506,
    "host": "localhost"
  },
  
  "pipeline": {
    "enabled": true,
    "layers": [
      {
        "id": "client",
        "type": "http-client",
        "enabled": true
      },
      {
        "id": "router", 
        "type": "simple-router",
        "enabled": true
      },
      {
        "id": "transformer",
        "type": "anthropic-to-openai-transformer", 
        "enabled": true
      },
      {
        "id": "protocol",
        "type": "openai-protocol",
        "enabled": true
      },
      {
        "id": "server-compatibility",
        "type": "lmstudio-compatibility",
        "enabled": true
      },
      {
        "id": "server",
        "type": "openai-server",
        "enabled": true,
        "config": {
          "baseUrl": "http://localhost:1234/v1",
          "timeout": 30000
        }
      }
    ]
  },
  
  "routing": {
    "strategy": "single-provider",
    "defaultProvider": "lmstudio"
  },
  
  "debug": {
    "enabled": true,
    "logLevel": "info"
  },
  
  "zeroFallbackPolicy": {
    "enabled": true,
    "strictMode": true,
    "errorOnFailure": true
  }
}