{
  "server": {
    "port": 3458,
    "host": "localhost",
    "architecture": "v3.0-six-layer",
    "environment": "testing"
  },
  "providers": {
    "mock-provider-test": {
      "type": "openai",
      "endpoint": "http://localhost:9999/mock/v1/chat/completions",
      "authentication": {
        "type": "none"
      },
      "models": ["test-model-1", "test-model-2"],
      "timeout": 5000,
      "maxRetries": 1,
      "retryDelay": 100
    },
    "lmstudio-test": {
      "type": "openai",
      "endpoint": "http://localhost:1234/v1/chat/completions",
      "authentication": {
        "type": "none"
      },
      "models": ["test-local-model"],
      "timeout": 10000,
      "maxRetries": 1,
      "retryDelay": 500
    }
  },
  "routing": {
    "strategy": "testing-category-driven",
    "categories": {
      "default": {
        "provider": "mock-provider-test",
        "model": "test-model-1"
      },
      "background": {
        "provider": "mock-provider-test",
        "model": "test-model-2"
      },
      "thinking": {
        "provider": "lmstudio-test",
        "model": "test-local-model"
      },
      "longcontext": {
        "provider": "mock-provider-test",
        "model": "test-model-1"
      },
      "search": {
        "provider": "mock-provider-test",
        "model": "test-model-2"
      }
    }
  },
  "debug": {
    "enabled": true,
    "logLevel": "debug",
    "logDir": "/tmp/ccr-test-logs",
    "traceRequests": true,
    "saveRequests": true
  },
  "errors": {
    "messages": {
      "configuration_missing": "TEST: Configuration '{key}' missing",
      "provider_unavailable": "TEST: Provider '{provider}' unavailable",
      "model_not_found": "TEST: Model '{model}' not found",
      "authentication_failed": "TEST: Auth failed for '{provider}'",
      "request_timeout": "TEST: Timeout for '{provider}' ({timeout}ms)",
      "validation_error": "TEST: Validation failed - {details}",
      "preprocessing_failed": "TEST: Preprocessing failed for {provider}/{model} [{requestId}]: {error}"
    },
    "httpCodes": {
      "configuration_missing": 500,
      "provider_unavailable": 502,
      "model_not_found": 404,
      "authentication_failed": 401,
      "request_timeout": 504,
      "validation_error": 400,
      "preprocessing_failed": 500
    },
    "templates": {
      "configuration_missing": "TEST ERROR: Configuration '{key}' is missing for testing environment",
      "provider_unavailable": "TEST ERROR: Test provider '{provider}' is not available",
      "model_not_found": "TEST ERROR: Test model '{model}' not found in provider '{provider}'",
      "authentication_failed": "TEST ERROR: Authentication test failed for provider '{provider}'",
      "request_timeout": "TEST ERROR: Request timeout test for provider '{provider}' ({timeout}ms)",
      "validation_error": "TEST ERROR: Validation test failed: {details}",
      "preprocessing_failed": "TEST ERROR: Response preprocessing test failed for {provider}/{model} [{requestId}]: {error}"
    }
  },
  "validation": {
    "required": [
      "server.port",
      "server.host",
      "server.architecture",
      "server.environment",
      "providers",
      "routing.strategy",
      "routing.categories",
      "debug.enabled",
      "debug.logLevel",
      "debug.logDir",
      "errors.messages",
      "errors.httpCodes",
      "errors.templates"
    ],
    "environmentFiles": {}
  }
}