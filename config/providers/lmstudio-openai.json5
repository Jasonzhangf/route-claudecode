{
  // LM Studio OpenAI兼容配置
  "provider": {
    "id": "lmstudio-openai",
    "name": "LM Studio (OpenAI Compatible)",
    "type": "openai",
    "description": "LM Studio服务器，使用OpenAI兼容API",
    "version": "1.0.0", 
    "enabled": true
  },
  
  // 连接配置
  "connection": {
    "endpoint": "http://localhost:1234/v1/chat/completions",
    "baseURL": "http://localhost:1234/v1",
    "timeout": 30000,
    "retries": 3,
    "retryDelay": 1000,
    "keepAlive": true,
    "maxSockets": 10
  },
  
  // 认证配置
  "auth": {
    "type": "bearer_token",
    "apiKey": "lm-studio-local-key",
    "headerName": "Authorization",
    "headerPrefix": "Bearer "
  },
  
  // 模型配置
  "models": {
    "default": "llama-3.1-8b-instruct",
    "available": [
      "llama-3.1-8b-instruct",
      "llama-3.1-70b-instruct",
      "codellama-34b-instruct", 
      "mistral-7b-instruct"
    ],
    "fallback": "llama-3.1-8b-instruct"
  },
  
  // 请求参数默认值
  "defaults": {
    "max_tokens": 4096,
    "temperature": 0.7,
    "top_p": 0.9,
    "frequency_penalty": 0,
    "presence_penalty": 0,
    "stream": false,
    "stop": []
  },
  
  // 性能配置  
  "performance": {
    "maxConcurrentRequests": 5,
    "requestQueueSize": 20,
    "responseTimeout": 60000,
    "healthCheckInterval": 30000,
    "metricsEnabled": true
  },
  
  // 错误处理配置
  "errorHandling": {
    "maxRetries": 3,
    "retryBackoff": "exponential",
    "retryDelay": 1000,
    "retryableStatusCodes": [429, 500, 502, 503, 504],
    "circuitBreakerEnabled": true,
    "circuitBreakerThreshold": 5,
    "circuitBreakerTimeout": 60000
  },
  
  // 缓存配置
  "cache": {
    "enabled": true,
    "ttl": 300000, // 5分钟
    "maxSize": 1000,
    "strategy": "lru",
    "keyGenerator": "content_hash"
  },
  
  // 监控配置
  "monitoring": {
    "enabled": true,
    "metricsCollection": true,
    "healthChecks": true,
    "alerting": {
      "enabled": true,
      "thresholds": {
        "errorRate": 0.05, // 5%
        "responseTime": 1000, // 1秒
        "availability": 0.99 // 99%
      }
    }
  },
  
  // 开发和调试
  "debug": {
    "logLevel": "info",
    "logRequests": false,
    "logResponses": false, 
    "traceRequests": false,
    "dumpOnError": true
  },
  
  // 特性标志
  "features": {
    "streamingSupport": true,
    "toolCallsSupport": true,
    "batchRequests": false,
    "compressionSupport": false,
    "websocketSupport": false
  },
  
  // 元数据
  "metadata": {
    "createdAt": "2025-08-15T15:20:00.000Z",
    "updatedAt": "2025-08-15T15:20:00.000Z",
    "author": "RCC v4.0",
    "tags": ["lmstudio", "openai", "local", "development"],
    "environment": "development"
  }
}