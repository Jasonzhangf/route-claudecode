# RCC v4.0 环境变量配置文件
# 复制到 .env 并根据需要修改

# 基础配置
NODE_ENV=development
RCC_PORT=3456
RCC_HOST=localhost

# 调试设置
RCC_DEBUG=false
RCC_LOG_LEVEL=info
RCC_SAVE_REQUESTS=false

# 配置路径
RCC_CONFIG_DIR=~/.route-claudecode/config
RCC_DEBUG_DIR=~/.route-claudecode/debug
RCC_LOG_DIR=~/.route-claudecode/logs

# LM Studio配置 (示例)
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_API_KEY=lm-studio

# OpenAI配置 (可选)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic配置 (可选)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# 性能设置
RCC_MAX_CONCURRENT_REQUESTS=10
RCC_REQUEST_TIMEOUT=30000
RCC_HEALTH_CHECK_INTERVAL=30000

# 安全设置
RCC_CORS_ORIGINS=http://localhost:*
RCC_RATE_LIMIT_ENABLED=true
RCC_RATE_LIMIT_RPM=60