{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noEmitOnError": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/input/*": ["input/*"],
      "@/routing/*": ["routing/*"],
      "@/output/*": ["output/*"],
      "@/providers/*": ["providers/*"],
      "@/transformers/*": ["transformers/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tools"
  ]
}